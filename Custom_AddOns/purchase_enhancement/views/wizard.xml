<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_request_reject_wizard_form" model="ir.ui.view">
        <field name="name">purchase.wizard.form</field>
        <field name="model">purchase.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Purchase Request">
                <group>
                    <field name="rejection_reason" required="1"/>
                </group>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>